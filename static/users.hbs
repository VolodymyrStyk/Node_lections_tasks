<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style/style.css">
    <title>Users</title>
</head>
<body>
    <div class="container">
        <h1>All users</h1>
        <div>
            {{#each users}}
                <div class="user-container">
                    <div>User login: <span class="login">{{this.login}}</span></div>
                    <div>User Password: <span class="password">{{this.password}}</span></div>
                </div>
            {{/each}}
        </div>
        <div>
            <a href="/">
                <button>Go to Main</button>
            </a>
        </div>
    </div>
</body>
</html>